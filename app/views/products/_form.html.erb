<%= form_for(@product) do |form| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= raw t('.errors.template.header', count: @product.errors.count,
      model: t('.activerecord.models.order')) %>.</h2>
      <p><%= t('.errors.template.body') %></p>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= raw message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, t('.title') %>
    <%= form.text_field :title, id: :product_title %>
  </div>

  <div class="field">
    <%= form.label :description, t('.description') %>
    <%= form.text_area :description, id: :product_description, rows: 6 %>
  </div>

  <div class="field">
    <%= form.label :image_url %>
    <%= form.text_field :image_url, id: :product_image_url %>
  </div>

  <div class="field">
    <%= form.label :price, t('.price') %>
    <%= form.text_field :price, id: :product_price %>
  </div>

  <div class="actions">
    <%= form.submit t('.submit') %>
  </div>
<% end %>
