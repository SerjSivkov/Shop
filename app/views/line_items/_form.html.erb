<%= form_with(model: line_item, local: true) do |form| %>
  <% if line_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= raw t('.errors.template.header', count: line_item.errors.count,
      model: t('.activerecord.models.line_item')) %>.</h2>
      <p><%= t('.errors.template.body') %></p>

      <ul>
      <% line_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :product_id, t('.product_id') %>
    <%= form.text_field :product_id, id: :line_item_product_id %>
  </div>

  <div class="field">
    <%= form.label :cart_id, t('.cart') %>
    <%= form.text_field :cart_id, id: :line_item_cart_id %>
  </div>

  <div class="actions">
    <%= form.submit t('.submit') %>
  </div>
<% end %>
