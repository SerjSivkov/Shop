<h2">Ваша Корзина</h2>
<table>
   <% render(cart.line_items) %>
    <tr class="total_line">
      <td colspan="2">Всего</td>
      <td class="total_cell"><%= number_to_currency(cart.total_price, unit: "R", separator: ",", delimiter: "", format: "%n %u") %></td>
    </tr>
</table>
<%= button_to 'Оформить', new_order_path, method: :get %>
<%= button_to 'Очистить корзину', cart, method: :delete, data: {confirm: 'Вы уверены?'} %>
