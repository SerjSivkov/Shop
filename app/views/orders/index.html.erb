<p id="notice"><%= notice %></p>

<h1><%= t('.orders') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th><%= t('.address') %></th>
      <th><%= t('.email') %></th>
      <th><%= t('.pay_type') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= link_to t('.show'), order %></td>
        <td><%= link_to t('.edit'), edit_order_path(order) %></td>
        <td><%= link_to t('.delete'), order, method: :delete, data: { confirm: t('.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new_order'), new_order_path %>
<p><%= paginate @orders %></p>