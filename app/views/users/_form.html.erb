<div class="depot_form">
  <%= form_for @user do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> сведения об этом пользователе не могут быть сохранены:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<fieldset>
  <legend>Введите сведения о пользователе</legend>
  <div class="field">
    <%= form.label :name, 'Логин:' %><br>
    <%= form.text_field :name, size: 40 %>
  </div>

  <div class="field">
    <%= form.label :password, 'Пароль:' %><br>
    <%= form.password_field :password, size: 40 %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation, 'Пароль еще раз:' %> <br>
    <%= form.password_field :password_confirmation, size: 40 %>
  </div>

  <div class="actions">
    <%= form.submit 'Создать пользователя' %>
  </div>

</fieldset>
<% end %>
</div>

