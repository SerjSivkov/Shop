<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<h5><p><%= @shown_message %></p></h5>
<h1>Список товаров</h1>
<% cache ['store', Product.latest] do %>
   <% @products.each do |product| %>
   <% cache ['entry', product] do %>
    <div class="entry">
      <%= image_tag(product.image_url) %>

      <h3><%= product.title %></h3>
      <%= sanitize(product.description) %>

      <div class="price_line">
        <span class="price"><%= number_to_currency(product.price, unit: "R", separator: ",", delimiter: "", format: "%n %u") %></span>
        <%= button_to 'Добавить в корзину', line_items_path(product_id: product) %>
      </div>
    </div>
  <% end %>
  <% end %>
<% end %>
